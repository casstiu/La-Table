<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>No Account Layout</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Quicksand:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Quicksand', sans-serif;
        }

        .nav-wrapper {
            background-color: #472F35 !important;
            display: flex;
            align-items: center;
            padding: 0 20px;
        }

        .brand {
            font-size: 1.8rem;
            display: flex;
            align-items: center;
        }

            .brand img {
                height: 50px; /* Adjust logo size */
                margin-right: 10px;
            }

        ul#nav-mobile {
            flex: 1;
            display: flex;
            justify-content: center; /* Center menu items */
        }

            ul#nav-mobile li a {
                font-family: 'Quicksand', sans-serif;
                font-size: 1.1rem;
                margin: 0 15px; /* Add spacing between menu items */
            }

        .nav-buttons {
            display: flex;
            gap: 10px;
        }

            .nav-buttons a {
                font-weight: bold;
                border-radius: 5px;
            }

            .nav-buttons .btn-reserve {
                background-color: #FF5722;
                color: white;
            }

            .nav-buttons .btn-login {
                background-color: white;
                color: #472F35;
                border: 2px solid #472F35;
            }

        .carousel.carousel-slider {
            height: 100vh; /* Fullscreen height */
        }

        .carousel .carousel-item {
            position: relative;
        }

            .carousel .carousel-item img {
                height: 100%;
                object-fit: cover;
            }

        .hero-content {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            color: white;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);
        }

            .hero-content h1 {
                font-family: 'Playfair Display', serif;
                font-size: 4rem;
                margin: 0;
            }

            .hero-content p {
                font-size: 1.5rem;
                margin: 10px 0 20px;
            }

            .hero-content .btn-large {
                background-color: #FF5722 !important; /* Match orange button */
                color: white;
                font-weight: bold;
                padding: 10px 20px;
                border-radius: 25px;
            }

                .hero-content .btn-large:hover {
                    background-color: #E64A19 !important;
                }

        footer {
            background-color: #472F35;
            color: white;
            padding: 2rem 0;
        }

            footer a {
                color: #FF5722;
                text-decoration: none;
            }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav>
        <div class="nav-wrapper">
            <a href="#home" class="brand">
                <img src="~/Content/Logo Transparent.png" alt="Logo">
                La Table by Cassandra and Sofia
            </a>
            <ul id="nav-mobile" class="hide-on-med-and-down">
                <li><a href="#home">Home</a></li>
                <li><a href="#about">About Us</a></li>
                <li><a href="#gallery">Gallery</a></li>
                <li><a href="#promos">Promos</a></li>
                <li><a href="#contact">Contact</a></li>
            </ul>
            <div class="nav-buttons">
                <a href="#reserve" class="btn btn-reserve">Reserve Now</a>
                <a href="#login" class="btn btn-login">Login</a>
            </div>
        </div>
    </nav>

    <!-- Hero Section with Carousel -->
    <div class="carousel carousel-slider">
        <div class="carousel-item">
            <img src="~/Content/FrenchFood1.jpeg" alt="French Dish 1">
            <div class="hero-content">
                <h1>Welcome to La Table</h1>
                <p>Delicious French Cuisine for Every Occasion</p>
                <a href="#reservations" class="btn-large waves-effect waves-light">Book a Table</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Content/FrenchFood2.jpeg" alt="French Dish 2">
        </div>
        <div class="carousel-item">
            <img src="~/Content/FrenchFood3.jpeg" alt="French Dish 3">
        </div>
    </div>

    <!-- About Us -->
    <div id="about" class="section">
        <div class="container">
            <h2 class="center-align">About Us</h2>
            <p class="flow-text">We are a modern seafood restaurant offering a variety of fresh dishes inspired by the ocean.</p>
        </div>
    </div>

    @RenderBody()
    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col l6 s12">
                    <h5>La Table by Cassandra and Sofia</h5>
                    <p>We look forward to serving you.</p>
                </div>
                <div class="col l4 offset-l2 s12">
                    <h5>Links</h5>
                    <ul>
                        <li><a href="#about">About Us</a></li>
                        <li><a href="#menu">Menu</a></li>
                        <li><a href="#promos">Promos</a></li>
                        <li><a href="#contact">Contact</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <!-- Import Materialize JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var elems = document.querySelectorAll('.carousel');
            var instances = M.Carousel.init(elems, {
                fullWidth: true,
                indicators: true
            });
        });
    </script>
</body>
</html>
