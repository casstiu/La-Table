@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Quicksand:wght@300..700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Home</title>
    <style>
        body {
            margin: 0;
            font-family: 'Quicksand', sans-serif;
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #F1EDDA;
            padding: 10px 20px;
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .brand-logo {
            margin: 0;
            color: #ad9162;
            font-weight: bold;
            font-size: 24px;
        }

        .navbar-links {
            display: flex;
        }

        .navbar a {
            text-decoration: none;
            color: #ad9162;
            padding: 10px 15px;
            margin-left: 10px;
            border-radius: 5px;
            transition: transform 0.2s ease-in-out, background-color 0.3s, color 0.3s;
        }

            .navbar a:hover {
                transform: scale(1.1);
            }

            .navbar a:active {
                transform: scale(1.2);
            }

            .navbar a.active {
                border-bottom: 2px solid #ad9162;
                color: #ad9162;
            }

        #bgpic {
            background-image: url('https://dynamic-media-cdn.tripadvisor.com/media/photo-o/1a/2f/98/c8/la-vie-bistronomy-restaurant.jpg');
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center;
            width: 100%;
            height: 600px;
            position: relative;
        }

        .heading-overlay {
            position: absolute;
            top: 60%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            color: #F1EDDA;
            font-family: 'Playfair Display', serif;
            padding: 20px;
            background: rgba(0, 0, 0);
            border-radius: 10px;
            opacity: 80%;
        }

            .heading-overlay h1 {
                font-size: 3rem;
                margin: 0;
                color: #F1EDDA;
            }

            .heading-overlay p {
                font-size: 1.5rem;
                margin: 10px 0 20px;
                color: #ad9162;
                font-family: 'Montserrat', sans-serif;
            }

        .btn-transparent {
            border: 2px solid #ad9162;
            color: #ad9162;
            background: transparent;
            padding: 10px 20px;
            font-size: 1rem;
            font-weight: bold;
            border-radius: 5px;
            transition: all 0.3s ease;
            cursor: pointer;
        }

            .btn-transparent:hover {
                background: #ad9162;
                color: #F1EDDA;
            }

        .img {
            max-width: 100%;
            height: auto;
            display: block;
            margin: 0 auto;
        }

        #booking-modal {
            max-width: 600px;
            max-height: 500px;
            border-radius: 10px;
        }

            #booking-modal .modal-content {
                padding: 24px;
            }

            #booking-modal .input-field {
                margin: 20px 0;
            }

            #booking-modal .btn-custom {
                background-color: #ad9162;
                margin: 10px 0;
            }

                #booking-modal .btn-custom:hover {
                    background-color: #8f7a52;
                }

        #userModal {
            max-width: 500px;
            border-radius: 15px;
            background-color: #F1EDDA;
        }

            #userModal .modal-content {
                padding: 24px;
                background-color: rgba(173, 145, 98, 0.1);
            }

            #userModal .modal-footer {
                background-color: #F1EDDA;
                padding: 15px;
            }

            #userModal .btn-flat:hover {
                background-color: #e85a4f !important;
            }

            #userModal .section {
                padding: 20px;
                color: #333;
            }

        .btn {
            background-color: #ad9162 !important;
            border-color: #ad9162 !important;
        }

            .btn:hover {
                background-color: #8c744f !important;
                border-color: #8c744f !important;
            }

        .dropdown-item {
            font-family: 'Quicksand', sans-serif;
            -webkit-tap-highlight-color: transparent !important;
        }

        .dropdown-menu {
            max-height: 200px;
            overflow-y: auto;
        }

            .dropdown-menu .dropdown-item:active,
            .dropdown-menu .dropdown-item:focus,
            .dropdown-menu .dropdown-item.active {
                background-color: #ad9162 !important;
                color: white !important;
                outline: none !important;
            }

            .dropdown-menu .dropdown-item:hover {
                background-color: #ad9162 !important;
                color: white !important;
            }

        .dropdown-item:focus,
        .dropdown-item:focus-visible {
            outline: none !important;
            box-shadow: none !important;
            -webkit-tap-highlight-color: transparent !important;
        }

        .btn:focus,
        .btn.focus,
        .btn:active,
        .btn.active {
            outline: none !important;
            box-shadow: none !important;
            background-color: #ad9162 !important;
            border-color: #ad9162 !important;
        }
    </style>
</head>
<body>
    <!-- NAVBAR -->
    <div class="navbar">
        <img src="~/Content/Logo Transparent.png" style="border:0; height: 50px; width: 50px;">
        <h3 class="brand-logo" style="margin-left:-550px;">La Table by Cassandra and Sofia</h3>
        <div class="navbar-links">
            <a href="CustomerHome"><b>Home</b></a>
            <a href="CustomerBookings"><b>Bookings</b></a>
            <a href="CustomerAbout"><b>About</b></a>
            <a href="CustomerPromos"><b>Promos</b></a>

            <div class="trigger-container">
                <a class="modal-trigger" href="#userModal">
                    <span class="large material-icons account_circle" style="font-size: 40px">account_circle</span>
                </a>
            </div>
        </div>
    </div>

    <!-- HEADER -->
    <div id="bgpic">
        <div class="heading-overlay">
            <h1>La Table</h1>
            <p>by Cassandra and Sofia</p>
            <a class="btn-transparent modal-trigger" href="#booking-modal">Reserve Now</a>
        </div>
    </div>

    <!-- Booking Modal -->
    <div id="booking-modal" class="modal">
        <div class="modal-content">
            <h3 style="text-align:center; color: #ad9162"><b>Table Reservation</b></h3>
            <form ng-submit="reserveTable()">
                <div class="row">
                    <div class="col">
                        <div class="input-field">
                            <input type="number" id="number_guests" min="1" max="9" ng-model="reservation.NumofGuests" required>
                            <label for="number_guests">Number of Guests</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="input-field">
                            <input type="text" class="datepicker" id="reservation_date" ng-model="reservation.reservationDate" required>
                            <label for="reservation_date">Reservation Date</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <p>Reservation Time:</p>
                    </div>
                    <div class="col d-flex align-items-center">
                        <!-- DROPDOWN FOR RESERVATION TIME -->
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle" type="button" id="timeDropdownButton" data-bs-toggle="dropdown" ng-click="loadAvailableTables()" aria-expanded="false" style="margin-left: -150px">
                                Select Time
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="timeDropdownButton">
                                <li><a class="dropdown-item" href="#" ng-click="reservation.reservationTime='9:00 AM'">9:00 AM</a></li>
                                <li><a class="dropdown-item" href="#" ng-click="reservation.reservationTime='10:00 AM'">10:00 AM</a></li>
                                <li><a class="dropdown-item" href="#" ng-click="reservation.reservationTime='11:00 AM'">11:00 AM</a></li>
                                <li><a class="dropdown-item" href="#" ng-click="reservation.reservationTime='12:00 PM'">12:00 PM</a></li>
                                <li><a class="dropdown-item" href="#" ng-click="reservation.reservationTime='1:00 PM'">1:00 PM</a></li>
                                <li><a class="dropdown-item" href="#" ng-click="reservation.reservationTime='2:00 PM'">2:00 PM</a></li>
                                <li><a class="dropdown-item" href="#" ng-click="reservation.reservationTime='3:00 PM'">3:00 PM</a></li>
                                <li><a class="dropdown-item" href="#" ng-click="reservation.reservationTime='4:00 PM'">4:00 PM</a></li>
                                <li><a class="dropdown-item" href="#" ng-click="reservation.reservationTime='5:00 PM'">5:00 PM</a></li>
                                <li><a class="dropdown-item" href="#" ng-click="reservation.reservationTime='6:00 PM'">6:00 PM</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="center-align" style="display: flex; justify-content: center; align-items: center; gap: 20px;">
                    <button type="submit" class="btn btn-primary waves-effect waves-light" style="background-color: #ad9162;">Reserve Now</button>
                    <a href="#!" class="btn modal-close waves-effect waves-green" style="background-color: black; color: white;">Close</a>
                </div>
            </form>
        </div>
    </div>


    <!-- User Modal (Materialize) -->
    <div id="userModal" class="modal">
        <div class="modal-content">
            <h5 class="center-align" style="color: #ad9162; font-weight: 700;">User Information</h5>
            <div class="divider"></div>
            <div class="section">
                <p><strong>Full Name:</strong>  @ViewBag.FirstName @ViewBag.LastName</p>
                <p><strong>Phone Number:</strong> @ViewBag.Phone_Num</p>
                <p><strong>Email:</strong> @ViewBag.Email</p>
            </div>
        </div>
        <div class="modal-footer">
            <a href="#!" class="modal-close waves-effect waves-light btn" onclick="logout()"
               style="background-color: #ad9162; color: white; border-radius: 25px; margin-right: 10px;">
                Logout
            </a>
        </div>
        <br>
    </div>

    <!-- Content Section -->
    <div class="content-section" style="margin-top: 50px;">
        <div class="container">
            <div class="row">
                <!-- LEFT COLUMN -->
                <div class="col s12 m6">
                    <p class="description" style="font-size: 19px;">
                        Welcome to La Table, a French restaurant where culinary artistry meets warm hospitality.
                        Known for our exquisite charcuterie boards, we bring the finest meats, cheeses, and
                        accompaniments to your table. Our passion lies in crafting unforgettable dining experiences
                        that celebrate the flavors of France. Each plate is thoughtfully designed to showcase the
                        best of seasonal and locally sourced ingredients. From creamy brie to perfectly cured prosciutto,
                        every bite tells a story of tradition and innovation. Our wine selection, carefully curated to
                        complement our menu, adds an extra layer of indulgence to your dining experience. At La Table,
                        we believe that dining is not just a meal—it’s an event to savor and share. Step into our world,
                        where every detail is designed to delight.
                    </p>
                    <img src="https://food.fnr.sndimg.com/content/dam/images/food/fullset/2022/09/07/FNK_Charcuterie-board-how-to_step-13.jpg.rend.hgtvcom.1280.720.suffix/1662570515845.jpeg"
                         alt="Charcuterie Board"
                         class="responsive-img"
                         style="max-width: 100%; border-radius: 10px; margin-top: 20px;">

                    <br />
                    <br />
                    <br />

                    <!-- Contact Information -->
                    <h5>For reservations and inquiries:</h5>
                    <div class="row">
                        <div class="col s12 m6">
                            <ul class="collection">
                                <li class="collection-item" style="display: flex; align-items: center;">
                                    <i class="material-icons" style="margin-right: 15px; color: #ad9162;">call</i>
                                    <span>+1 234 567 8900</span>
                                </li>
                                <li class="collection-item" style="display: flex; align-items: center;">
                                    <i class="material-icons" style="margin-right: 15px; color: #ad9162;">phone_android</i>
                                    <span>+1 987 654 3210</span>
                                </li>
                                <li class="collection-item" style="display: flex; align-items: center;">
                                    <i class="material-icons" style="margin-right: 15px; color: #ad9162;">email</i>
                                    <span>latablebycs@gmail.com</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- RIGHT COLUMN -->
                <div class="col s12 m6">
                    <p class="description" style="font-size: 19px;">
                        Whether you’re here for a romantic evening or a gathering with friends, La Table offers a refined yet
                        cozy ambiance. Every dish is a testament to our dedication to quality and tradition. Join us for a culinary
                        journey that’s as delightful as it is authentic. Our attentive staff is here to ensure your experience is
                        seamless and memorable. From the flicker of candlelight to the aroma of freshly baked bread, every moment
                        at La Table is designed to enchant. Discover a place where the love for food and community comes together
                        in perfect harmony.
                    </p>
                    <img src="https://www.shutterstock.com/image-photo/desserts-pastries-tempting-delightful-spread-600nw-2425678879.jpg"
                         alt="French Appetizers"
                         class="responsive-img"
                         style="max-width: 100%; border-radius: 10px; margin-top: 20px;">
                    <br />
                    <br />
                    <h5>Operating Hours:</h5>
                    <div class="row">
                        <div class="col s12 m6">
                            <div class="content">
                                <p><strong>Monday - Sunday:</strong> 9:00 AM - 6:00 PM</p>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <hr>

    <!-- CONTAINER 4 -->
    <div class="container4" id="bottomdetails">
        <div class="row" id="bottomdetails" style="padding-left:30px;padding-top:20px;padding-bottom:30px">
            <div class="col">
                <h6> +1 234 567 8900 or +1 987 654 3210</h6>
                <h6>latablebycs@gmail.com</h6>
                <h6> La Table by Cassandra and Sofia 7 Jean Moulin Paris, France </h6>
                <br>
            </div>

            <div class="col">
                <h6>KNOW MORE ABOUT US</h6>
                <br>
                <h6><u>Contact Us</u></h6>
                <h6><u>Find Us</u></h6>
                <h6><u>Gift Cards</u></h6>
                <h6><u>Privacy and Cookies</u></h6>
                <h6><u>Terms and Conditions</u></h6>
            </div>

            <div class="col" style="margin-left: -400px">
                <h6>JOIN OUR COMMUNITY</h6>
                <br>
                <h6><u>Travel Professionals</u></h6>
                <h6><u>Event Planners</u></h6>
                <h6><u>Event Organizers</u></h6>
                <h6><u>Media Center</u></h6>
                <h6><u>Development</u></h6>
            </div>
            <br>
        </div>
    </div>

    <hr>
    <br>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Initialize all modals
            var modals = document.querySelectorAll('.modal');
            M.Modal.init(modals, {
                dismissible: true,
                opacity: 0.5,
                inDuration: 250,
                outDuration: 250,
                startingTop: '4%',
                endingTop: '10%'
            });

            // Initialize Date Picker
            var dateElems = document.querySelectorAll('.datepicker');
            M.Datepicker.init(dateElems, {
                autoClose: true,
                format: 'yyyy-mm-dd',
                minDate: new Date()
            });

            // Initialize Time Picker
            var timeElems = document.querySelectorAll('.timepicker');
            M.Timepicker.init(timeElems, {
                autoClose: true,
                twelveHour: false
            });
        });

        function logout() {
            alert('You have been logged out.');
            var userModal = M.Modal.getInstance(document.querySelector('#userModal'));
            userModal.close();
        }

        //Dropdown Select Time
        const timeDropdownButton = document.getElementById('timeDropdownButton');
        const dropdownItems = document.querySelectorAll('.dropdown-item');

        dropdownItems.forEach(item => {
            item.addEventListener('click', (event) => {
                event.preventDefault();
                timeDropdownButton.textContent = item.textContent;
            });
        });
    </script>
</body>
</html> 