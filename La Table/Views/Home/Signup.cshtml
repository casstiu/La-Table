@{
    Layout = "~/Views/Shared/_SignupLayout.cshtml";
}

<style>
    body {
        background-image: url("/Content/SignupBG.png");
    }

    .input-field label {
        color: #f1edda;
    }

    .input-field input[type=text] {
        border-bottom: 1px solid #f1edda;
        box-shadow: 0 1px 0 0 #f1edda;
    }

    .input-field input[type=password] {
        border-bottom: 1px solid #f1edda;
        box-shadow: 0 1px 0 0 #f1edda;
    }
</style>
<div class="row" style=" margin-left: 55px;">
    <div class="col s6 m6 l6">
        <div class="row" style="margin-top:30px;">
            <div class="col s12 m12 l12">
                <div class="card" style="background-color: #AD9162; border-radius: 10px;">
                    <div class="card-content">
                        <h3 style="font-family: 'Georgia', serif; color: #f1edda; text-align: center; ">Sign Up</h3>
                        <div class="row">
                            <form class="col s12 m12 l12">
                                <div class="row">
                                    <div class="input-field col s4 m4 l4">
                                        <i class="material-icons prefix" style="color: #f1edda;">account_circle</i>
                                        <input id="firstName" type="text" class="validate">
                                        <label for="firstName">First Name</label>
                                    </div>
                                    <div class="input-field col s4 m4 l4">
                                        <input id="midName" type="text" class="validate">
                                        <label for="midName">Middle Name</label>
                                    </div>
                                    <div class="input-field col s4 m4 l4">
                                        <input id="lastName" type="text" class="validate">
                                        <label for="lastName">Last Name</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col s12 m12 l12">
                                        <i class="material-icons prefix" style="color: #f1edda;">business</i>
                                        <input id="userAddress" type="text" class="validate">
                                        <label for="userAddress">Address</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col s6 m6 l6">
                                        <i class="material-icons prefix" style="color: #f1edda;">email</i>
                                        <input id="email" type="text" class="validate" >
                                        <label for="email">Email</label>
                                    </div>
                                    <div class="input-field col s6 m6 l6">
                                        <i class="material-icons prefix" style="color: #f1edda;">local_phone</i>
                                        <input id="userNumber" type="text" class="validate">
                                        <label for="userNumber">Phone Number</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col s6 m6 l6">
                                        <i class="material-icons prefix" style="color: #f1edda;">lock</i>
                                        <input id="pass" type="password" class="validate" >
                                        <label for="pass">Password</label>
                                    </div>
                                    <div class="input-field col s6 m6 l6">
                                        <input id="conpass" type="password" class="validate">
                                        <label for="conpass">Confirm Password</label>
                                    </div>
                                </div>
                                <div class="col s12 m6 l6">
                                    <a class="waves-effect waves-light btn-large col s12 m12 l12 green darken-3" style="border-radius: 30px;">
                                        <i class="material-icons left">send</i>Submit
                                    </a>
                                </div>
                                <div class="col s12 m6 l6">
                                    <a class="waves-effect waves-light btn-large col s12 m12 l12 red darken-3" style="border-radius: 30px;">
                                        <i class="material-icons left">cancel</i>Cancel
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col s6 m6 l6"></div>
</div>

