    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var elems = document.querySelectorAll('.carousel');
            var instances = M.Carousel.init(elems, {
                fullWidth: true, // Make it full width
                indicators: true, // Show navigation indicators
                duration: 400, // Speed of transitions
            });

            // Auto-move carousel
            setInterval(function () {
                var activeCarousel = M.Carousel.getInstance(document.querySelector('.carousel'));
                activeCarousel.next(); // Move to the next slide
            }, 4000); // Set interval for 4 seconds
        });
    </script>

