@{
    Layout = "~/Views/Shared/_NoAccountLayout.cshtml";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Quicksand:wght@300..700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <title>Home</title>
    <style>
        body {
            margin: 0;
            font-family: 'Quicksand', sans-serif;
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #F1EDDA;
            padding: 10px 20px;
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .brand-logo {
            margin: 0;
            color: #ad9162;
            font-weight: bold;
            font-size: 24px;
        }

        .navbar-links {
            display: flex;
        }

        .navbar a {
            text-decoration: none;
            color: #ad9162;
            padding: 10px 15px;
            margin-left: 10px;
            border-radius: 5px;
            transition: transform 0.2s ease-in-out, background-color 0.3s, color 0.3s;
        }

            .navbar a:hover {
                transform: scale(1.1);
            }

            .navbar a:active {
                transform: scale(1.2);
            }

            .navbar a.active {
                border-bottom: 2px solid #ad9162;
                color: #ad9162; 
            }

        #bgpic {
            background-image: url('https://dynamic-media-cdn.tripadvisor.com/media/photo-o/1a/2f/98/c8/la-vie-bistronomy-restaurant.jpg');
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center;
            width: 100%;
            height: 600px;
            position: relative;
        }

        .heading-overlay {
            position: absolute;
            top: 60%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            color: #F1EDDA;
            font-family: 'Playfair Display', serif;
            padding: 20px;
            background: rgba(0, 0, 0);
            border-radius: 10px;
            opacity: 80%;
        }

            .heading-overlay h1 {
                font-size: 3rem;
                margin: 0;
                color: #F1EDDA;
            }

            .heading-overlay p {
                font-size: 1.5rem;
                margin: 10px 0 20px;
                color: #ad9162;
                font-family: 'Montserrat', sans-serif;
            }

        .btn-transparent {
            border: 2px solid #ad9162;
            color: #ad9162;
            background: transparent;
            padding: 10px 20px;
            font-size: 1rem;
            font-weight: bold;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

            .btn-transparent:hover {
                background: #ad9162;
                color: #F1EDDA;
            }

        .img {
            max-width: 100%;
            height: auto;
            display: block;
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <!-- NAVBAR -->
    <div class="navbar">

        <img src="~/Content/Logo Transparent.png" style="border:0; height: 50px; width: 50px;">

        <h3 class="brand-logo" style="margin-left:-550px; ">La Table by Cassandra and Sofia</h3>
        <div class="navbar-links">
            <a href="NoAccountHome"><b>Home</b></a>
            <a href="NoAccountAbout"><b>About</b></a>
            <a href="NoAccountPromos"><b>Promos</b></a>
            <a href="Login"><b>Login</b></a>
        </div>
    </div>

    <!-- HEADER -->
    <div id="bgpic">
        <div class="heading-overlay">
            <h1>La Table</h1>
            <p>by Cassandra and Sofia</p>
            <a href="Login" class="btn-transparent">Reserve Now</a>
        </div>
