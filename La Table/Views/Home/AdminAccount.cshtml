@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>

        body {
            margin: 0;
            font-family: 'Quicksand', sans-serif;
            background-color: #F1EDDA;
        }

        .sidebar {
            background-color: #472F35;
            width: 80px;
            height: 100vh;
            transition: width 0.3s;
            position: fixed;
            overflow: hidden;
            z-index: 1000;
        }

            .sidebar:hover {
                width: 250px;
            }

            .sidebar .logo {
                height: 80px;
                display: flex;
                justify-content: center;
                align-items: center;
                font-size: 24px;
                color: #F1EDDA;
            }

            .sidebar ul {
                list-style: none;
                padding: 0;
            }

                .sidebar ul li {
                    position: relative;
                }

                    .sidebar ul li a {
                        display: flex;
                        align-items: center;
                        padding: 15px;
                        text-decoration: none;
                        color: #F1EDDA;
                        font-size: 16px;
                        transition: background 0.3s;
                    }

                        .sidebar ul li a:hover {
                            background-color: #AD9162;
                        }

                    .sidebar ul li i {
                        margin-right: 10px;
                        font-size: 20px;
                        margin-left: 15px;
                    }

                    .sidebar ul li span {
                        opacity: 0;
                        visibility: hidden;
                        transition: opacity 0.3s, visibility 0.3s;
                        white-space: nowrap;
                    }

            .sidebar:hover ul li span {
                opacity: 1;
                visibility: visible;
            }

            .sidebar:hover ~ .main-content {
                margin-left: 250px;
            }

        .main-content {
            margin-left: 80px;
            padding: 20px;
        }

        .header {
            font-size: 30px;
            color: #472F35;
            margin-bottom: 20px;
        }

        .table-container {
            background-color: #FFFFFF;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            margin-top:20px;
        }

            .table-container table {
                width: 100%;
                border-collapse: collapse;
            }

            .table-container table, .table-container th, .table-container td {
                border: 1px solid #AD9162;
            }

            .table-container th, .table-container td {
                padding: 10px;
                text-align: left;
            }

            .table-container th {
                background-color: #472F35;
                color: #F1EDDA;
            }

            .table-container td {
                background-color: #F9F9F9;
            }

        .button-1 {
            background-color: #AD9162;
            color: #F1EDDA;
            border-radius: 5px;
            padding: 10px 15px;
            text-decoration: none;
            display: inline-block;
        }

            .button-1:hover {
                background-color: #472F35;
            }


        .modal-content {
            background-color: #F9F9F9;
            color: #472F35;
        }

            .modal-content h4 {
                text-align: center;
                font-size: 24px;
                font-weight: bold;
                color: #472F35;
            }

        .input-field input:focus,
        .input-field select:focus {
            border-bottom: 1px solid #AD9162 !important;
            box-shadow: 0 1px 0 0 #AD9162 !important;
        }

        .input-field label {
            color: #472F35;
        }

        .select-wrapper input.select-dropdown {
            color: #472F35;
        }

        .button {
            border: none;
            background-color: #AD9162;
            color: #F1EDDA;
            border-radius: 5px;
            padding: 10px 15px;
            text-decoration: none;
            text-align: center;
            display: inline-block;
            font-weight: bold;
            font-size: 14px;
            text-transform: uppercase;
            line-height: 1.2;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            .button:hover {
                background-color: #472F35;
                color: #F1EDDA;
                transform: scale(1.05);
            }

        .green-btn {
            background-color: #4CAF50;
            color: #F1EDDA;
        }

            .green-btn:hover {
                background-color: #388E3C;
            }

        .red-btn {
            background-color: #D9534F;
            color: #F1EDDA;
        }

            .red-btn:hover {
                background-color: #A94442;
            }
       
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="logo">
            <img src="~/Content/Logo.jpg" alt="Logo" style="width: 50px; height: 50px; object-fit: cover;">
        </div>
        <ul>
            <li><a href="AdminDashboard"><i class="material-icons">dashboard</i><span>Dashboard</span></a></li>
            <li class="active"><a href="AdminAccount"><i class="material-icons">account_circle</i><span>Accounts</span></a></li>
            <li><a href="AdminLogs"><i class="material-icons">access_time</i><span>Logs</span></a></li>
            <li><a href="AdminPromos"><i class="material-symbols-outlined">sell</i><span>Promos</span></a></li>
            <li><a href="AdminBookings"><i class="material-icons">event_note</i><span>Bookings</span></a></li>
            <li><a href="AdminTables"><i class="material-symbols-outlined">table_restaurant</i><span>Tables</span></a></li>
            <li><a href="NoAccountHome"><i class="material-icons">exit_to_app</i><span>Log Out</span></a></li>
        </ul>
    </div>

    <div class="main-content">
        <div class="header">Manage Accounts</div>
        <div class="button-container">
            <a class="button modal-trigger" href="#addAccountModal">Add Account</a>
        </div>

        <div id="addAccountModal" class="modal">
            <div class="modal-content">
                <h4>Add New Account</h4>
                <form>
                    <div class="row">
                        <div class="input-field col s6">
                            <input id="first_name" type="text" class="validate" required>
                            <label for="first_name">First Name</label>
                        </div>
                        <div class="input-field col s6">
                            <input id="last_name" type="text" class="validate" required>
                            <label for="last_name">Last Name</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s6">
                            <input id="number" type="text" class="validate" required>
                            <label for="number">Phone Number</label>
                        </div>
                        <div class="input-field col s6">
                            <input id="email" type="email" class="validate" required>
                            <label for="email">Email</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="password" type="password" class="validate" required>
                            <label for="password">Password</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6">
                            <select name="role" required>
                                <option value="" disabled selected>Select Role</option>
                                <option value="Admin">Admin</option>
                                <option value="Employee">Employee</option>
                                <option value="Customer">Customer</option>
                            </select>
                            <label>Role</label>
                        </div>
                        @*<div class="input-field col s6">
                            <select name="status" required>
                                <option value="" disabled selected>Select Status</option>
                                <option value="Active">Active</option>
                                <option value="Inactive">Inactive</option>
                            </select>
                            <label>Status</label>
                        </div>*@
                    </div>

                    <div class="modal-footer">
                        <button class="button green-btn" type="submit">Add</button>
                        <a href="#!" class="modal-close button red-btn">Close</a>
                    </div>
                </form>
            </div>
        </div>




        <!-- Accounts Table -->
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>Account ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Number</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th style="width: 157px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- example -->
                    <tr>
                        <td>1</td>
                        <td>Cass</td>
                        <td>Tiu</td>
                        <td>0123456789</td>
                        <td>casstiu@gmail.com</td>
                        <td>Admin</td>
                        <td>Active</td>
                        <td style="width: 157px;">
                            <a class="button-1">Edit</a>
                            <a class="button-1">Delete</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var modals = document.querySelectorAll('.modal');
            M.Modal.init(modals);

            var selects = document.querySelectorAll('select');
            M.FormSelect.init(selects);
        });
        </script>
</body >
</html >
