    <title>Promos</title>

    <style>
        body {
            margin: 0;
            font-family: 'Quicksand', sans-serif;
        }

        .navbar {
            display: flex;
            justify-content: space-between; /* Ensure the items are spread out */
            align-items: center; /* Vertically center the items */
            background-color: #F1EDDA;
            padding: 10px 20px;
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .brand-logo {
            margin: 0;
            color: #ad9162;
            font-weight: bold;
            font-size: 24px; /* Adjust as necessary */
        }

        .navbar-links {
            display: flex;
        }

        .navbar a {
            text-decoration: none;
            color: #ad9162;
            padding: 10px 15px;
            margin-left: 10px;
            border-radius: 5px;
            transition: transform 0.2s ease-in-out, background-color 0.3s, color 0.3s;
        }

            .navbar a:hover {
                transform: scale(1.1); /* Slightly zoom in on hover */
            }

            .navbar a:active {
                transform: scale(1.2); /* Further zoom in when clicked */
            }

            .navbar a.active {
                border-bottom: 2px solid #ad9162; /* Add an underline with the desired color */
                color: #ad9162; /* Optional: Change text color for the active link */
            }

        .card-image img {
            width: 100%;
            height: 250px;
            object-fit: cover;
        }
    </style>
</head>
