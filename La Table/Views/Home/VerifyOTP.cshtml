@{
    Layout = "~/Views/Shared/_SignupLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Quicksand:wght@300..700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <title>OTP Verification</title>
    <style>
        body {
            font-family: 'Quicksand', sans-serif;
            /* background: linear-gradient(135deg, #f06, #aaf); */
            background-color: #faebd7;
            color: #fff;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            background: #AD9162;
            padding: 20px 30px;
            border-radius: 15px;
            text-align: center;
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.3);
        }

        h1 {
            font-size: 2rem;
            margin-bottom: 1rem;
        }

        .otp-input {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-bottom: 1.5rem;
        }

            .otp-input input {
                width: 50px;
                height: 50px;
                font-size: 1.5rem;
                text-align: center;
                vertical-align: middle;
                line-height: 50px;
                border: none;
                border-radius: 5px;
                background: rgba(255, 255, 255, 0.8);
                color: #333;
                outline: none;
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            }

                .otp-input input:focus {
                    border: 2px solid #fff;
                }

        button {
            background: #faebd7;
            color: #AD9162;
            border: none;
            padding: 10px 20px;
            font-size: 1rem;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.3s ease;
        }

            button:hover {
                background: #d7c7b2;
            }

        .resend {
            margin-top: 1rem;
            font-size: 0.9rem;
        }

            .resend a {
                color: #faebd7;
                text-decoration: none;
                font-weight: bold;
                transition: color 0.3s ease;
            }

                .resend a:hover {
                    color: #d7c7b2;
                }

        .logo {
            height: 150px;
            width: 150px;
        }
    </style>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const inputs = document.querySelectorAll('.otp-input input');
            inputs.forEach((input, index) => {
                input.setAttribute('type', 'number'); // Restrict input to numbers
                input.addEventListener('input', (e) => {
                    if (e.target.value.length === 1 && index < inputs.length - 1) {
                        inputs[index + 1].focus();
                    }
                });

                input.addEventListener('keydown', (e) => {
                    if (e.key === 'Backspace' && !input.value && index > 0) {
                        inputs[index - 1].focus();
                    }
                });
            });
        });
    </script>
</head>
<body>
    <div class="container">
        <img src="Logo_Transparent.png" alt="LaTableLogo" class="logo">
        <h1>Verify Your OTP</h1>
        <p>We've sent a 6-digit OTP to your email. Enter it below to verify.</p>
        <div class="otp-input">
            <b><input type="number" name="otp[]" maxlength="1" required autofocus style="font-family: 'Quicksand', 'sans-serif';"></b>
            <b><input type="number" name="otp[]" maxlength="1" style="font-family: 'Quicksand', 'sans-serif';"></b>
            <b><input type="number" name="otp[]" maxlength="1" style="font-family: 'Quicksand', 'sans-serif';"></b>
            <b><input type="number" name="otp[]" maxlength="1" style="font-family: 'Quicksand', 'sans-serif';"></b>
            <b><input type="number" name="otp[]" maxlength="1" style="font-family: 'Quicksand', 'sans-serif';"></b>
            <b><input type="number" name="otp[]" maxlength="1" style="font-family: 'Quicksand', 'sans-serif';"></b>
        </div>
        <button>Verify</button>
        <div class="resend">
            Didn’t receive the OTP? <a href="#">Resend code</a>
        </div>
    </div>
</body>
</html>

