@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <style>
        body {
            margin: 0;
            font-family: 'Quicksand', sans-serif;
            display: flex;
            background-color: #F1EDDA;
            height: 100vh;
            flex-direction: column;
        }

        .sidebar {
            background-color: #472F35;
            width: 80px;
            height: 100vh;
            transition: width 0.3s;
            position: fixed;
            overflow: hidden;
            z-index: 1000;
        }

            .sidebar:hover {
                width: 250px;
            }

            .sidebar .logo {
                height: 80px;
                display: flex;
                justify-content: center;
                align-items: center;
                font-size: 24px;
                color: #F1EDDA;
            }

            .sidebar ul {
                list-style: none;
                padding: 0;
            }

                .sidebar ul li {
                    position: relative;
                }

                    .sidebar ul li a {
                        display: flex;
                        align-items: center;
                        padding: 15px;
                        text-decoration: none;
                        color: #F1EDDA;
                        font-size: 16px;
                        transition: background 0.3s;
                    }

                        .sidebar ul li a:hover {
                            background-color: #AD9162;
                        }

                    .sidebar ul li i {
                        margin-right: 10px;
                        font-size: 20px;
                        margin-left: 15px;
                    }

                    .sidebar ul li span {
                        opacity: 0;
                        visibility: hidden;
                        transition: opacity 0.3s, visibility 0.3s;
                        white-space: nowrap;
                    }

            .sidebar:hover ul li span {
                opacity: 1;
                visibility: visible;
            }

            .sidebar:hover ~ .main-content {
                margin-left: 250px;
            }

        .main-content {
            margin-left: 80px;
            padding: 20px;
            flex-grow: 1;
            min-height: 100vh;
            transition: margin-left 0.3s;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            flex-direction: column;
        }

        .header {
            font-size: 30px;
            color: #472F35;
            margin-bottom: 20px;
        }

        .card {
            background-color: #FFFFFF;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .card h3 {
                color: #472F35;
                font-size: 20px;
            }

            .card p {
                color: #AD9162;
                font-size: 16px;
            }

        .button {
            background-color: #AD9162;
            color: #F1EDDA;
            padding: 10px 20px;
            border-radius: 5px;
            text-align: center;
            cursor: pointer;
            display: inline-block;
            margin-top: 10px;
            transition: background 0.3s;
        }

            .button:hover {
                background-color: #472F35;
            }
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="logo">
            <img src="~/Content/Logo.jpg" alt="Logo"  style="width: 50px; height: 50px; object-fit: cover;">
        </div>
        <ul>
            <li class="active"><a href="AdminDashboard"><i class="material-icons">dashboard</i><span>Dashboard</span></a></li>
            <li><a href="AdminAccount"><i class="material-icons">account_circle</i><span>Accounts</span></a></li>
            <li><a href="AdminLogs"><i class="material-icons">access_time</i><span>Logs</span></a></li>
            <li><a href="AdminPromos"><i class="material-symbols-outlined">sell</i><span>Promos</span></a></li>
            <li><a href="AdminBookings"><i class="material-icons">event_note</i><span>Bookings</span></a></li>
            <li><a href="AdminTables"><i class="material-symbols-outlined">table_restaurant</i><span>Tables</span></a></li>
            <li><a href="AdminChairs"><i class="material-icons">chair</i><span>Chairs</span></a></li>
            <li><a href="NoAccountHome"><i class="material-icons">exit_to_app</i><span>Log Out</span></a></li>

        </ul>
    </div>

    <div class="main-content">
        <div class="header">Welcome, Admin!</div>

        <div class="card-container">
            <div class="card">
                <h3>Today's Reservations</h3>
                <p>0 Confirmed</p>
            </div>
            <div class="card">
                <h3>Available Tables</h3>
                <p>10 / 20</p>
            </div>
            <div class="card">
                <h3>Something</h3>
                <p>Something</p>
            </div>
        </div>

        <div class="card">
            <h3>Upcoming Reservations</h3>
            <p>View details of reservations scheduled for later today.</p>
            <div class="button">View Reservations</div>
        </div>
    </div>

</body>
</html>
