@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <style>
        body {
            margin: 0;
            font-family: 'Quicksand', sans-serif;
            display: flex;
            background-color: #F1EDDA;
            height: 100vh;
            flex-direction: column;
        }

        .sidebar {
            background-color: #472F35;
            width: 80px;
            height: 100vh;
            transition: width 0.3s;
            position: fixed;
            overflow: hidden;
            z-index: 1000;
        }

            .sidebar:hover {
                width: 250px;
            }

            .sidebar .logo {
                height: 80px;
                display: flex;
                justify-content: center;
                align-items: center;
                font-size: 24px;
                color: #F1EDDA;
            }

            .sidebar ul {
                list-style: none;
                padding: 0;
            }

                .sidebar ul li, .trigger-container {
                    position: relative;
                }

                    .sidebar ul li a, .trigger-container a {
                        display: flex;
                        align-items: center;
                        padding: 15px;
                        text-decoration: none;
                        color: #F1EDDA;
                        font-size: 16px;
                        transition: background 0.3s;
                    }

                        .sidebar ul li a:hover, .trigger-container a:hover {
                            background-color: #AD9162;
                        }

                    .sidebar ul li i, .trigger-container .material-icons {
                        margin-right: 10px;
                        font-size: 20px;
                        margin-left: 15px;
                        width: 24px;
                        text-align: center;
                        display: inline-block;
                    }

                        .trigger-container .material-icons.account_circle {
                            font-size: 24px;
                            width: 24px;
                            text-align: center;
                            display: inline-block;
                        }

                    .sidebar ul li span, .trigger-container span:not(.material-icons) {
                        opacity: 0;
                        visibility: hidden;
                        transition: opacity 0.3s, visibility 0.3s;
                        white-space: nowrap;
                    }

            .sidebar:hover ul li span, .sidebar:hover .trigger-container span:not(.material-icons) {
                opacity: 1;
                visibility: visible;
            }

            .sidebar:hover ~ .main-content {
                margin-left: 250px;
            }

        .main-content {
            margin-left: 80px;
            padding: 20px;
            flex-grow: 1;
     
            transition: margin-left 0.3s;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            flex-direction: column;
        }

        .header {
            font-size: 30px;
            color: #472F35;
            margin-bottom: 20px;
        }

        .card-container {
            margin-bottom: 20px; /* Space between the card rows */
        }

        .row {
            display: flex; /* Make the cards align in a row */
            justify-content: space-between; /* Evenly distribute space between cards */
            gap: 20px; /* Add spacing between cards */
        }

        .card {
            flex: 1; /* Allow cards to grow equally in width */
            max-width: 30%; /* Ensure each card doesn't exceed 30% of the row width */
            background-color: #FFFFFF;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            text-align: center; /* Optional: Center text in the cards */
        }

            .card h3 {
                color: #472F35;
                font-size: 20px;
            }

            .card p {
                color: #AD9162;
                font-size: 16px;
            }

        .button {
            background-color: #AD9162;
            color: #F1EDDA;
            padding: 10px 20px;
            border-radius: 5px;
            text-align: center;
            cursor: pointer;
            display: inline-block;
            margin-top: 10px;
            transition: background 0.3s;
        }

            .button:hover {
                background-color: #472F35;
            }

        #userModal {
            max-width: 500px;
            border-radius: 15px;
            background-color: #F1EDDA;
        }

            #userModal .modal-content {
                padding: 24px;
                background-color: rgba(173, 145, 98, 0.1);
            }

            #userModal .section {
                padding: 20px;
                color: #333;
            }

    </style>
</head>
<body>
    <div class="sidebar">
        <div class="logo">
            <img src="~/Content/Logo.jpg" alt="Logo" style="width: 50px; height: 50px; object-fit: cover;">
        </div>
        <div class="trigger-container">
            <a class="modal-trigger" href="#userModal">
                <span class="large material-icons account_circle">account_circle</span>
                <span>@ViewBag.FirstName @ViewBag.LastName</span>
            </a>
        </div>
        <ul>
            <li class="active"><a href="AdminDashboard"><i class="material-icons">dashboard</i><span>Dashboard</span></a></li>
            <li><a href="AdminAccount"><i class="material-icons">account_circle</i><span>Accounts</span></a></li>
            <li><a href="AdminLogs"><i class="material-icons">access_time</i><span>Logs</span></a></li>
            <li><a href="AdminPromos"><i class="material-symbols-outlined">sell</i><span>Promos</span></a></li>
            <li><a href="AdminBookings"><i class="material-icons">event_note</i><span>Bookings</span></a></li>
            <li><a href="AdminTables"><i class="material-symbols-outlined">table_restaurant</i><span>Tables</span></a></li>
            <li><a href="NoAccountHome"><i class="material-icons">exit_to_app</i><span>Log Out</span></a></li>
        </ul>
    </div>

    <!-- PROFILE MODAL -->
    <div id="userModal" class="modal">
        <div class="modal-content">
            <h5 class="center-align" style="color: #ad9162; font-weight: 700;">User Information</h5>
            <div class="divider"></div>
            <div class="section">
                <p><strong>Full Name:</strong>  @ViewBag.FirstName @ViewBag.LastName</p>
                <p><strong>Phone Number:</strong> @ViewBag.Phone_Num</p>
                <p><strong>Email:</strong> @ViewBag.Email</p>
                <p><strong>Role:</strong> @ViewBag.RoleName</p>
            </div>
        </div>
    </div>

    <div class="main-content">
        <h3>Welcome, @ViewBag.FirstName!</h3>
        <div class="card-container">
            <div class="row">
                <!-- Cards in a single row -->
                <div class="card">
                    <h3>Today's Reservations</h3>
                    <p>0 Confirmed</p>
                </div>
                <div class="card">
                    <h3>Available Tables</h3>
                    <p>10 / 20</p>
                </div>
                <div class="card">
                    <h3>Something</h3>
                    <p>Something</p>
                </div>
            </div>
        </div>

        <!-- Full-width card -->
        <!--<div class="card-container">
            <h3>Upcoming Reservations</h3>
            <p>View details of reservations scheduled for later today.</p>
            <div class="button">View Reservations</div>
        </div>-->
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var modals = document.querySelectorAll('.modal');
            M.Modal.init(modals);

            var selects = document.querySelectorAll('select');
            M.FormSelect.init(selects);
        });
    </script>
</body>
</html>