@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Quicksand:wght@300..700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;700&display=swap" rel="stylesheet">
    <title>Promos</title>

    <style>
        body {
            margin: 0;
            font-family: 'Quicksand', sans-serif;
        }

        .navbar {
            display: flex;
            justify-content: space-between; 
            align-items: center; 
            background-color: #F1EDDA;
            padding: 10px 20px;
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .brand-logo {
            margin: 0;
            color: #ad9162;
            font-weight: bold;
            font-size: 24px; 
        }

        .navbar-links {
            display: flex;
        }

        .navbar a {
            text-decoration: none;
            color: #ad9162;
            padding: 10px 15px;
            margin-left: 10px;
            border-radius: 5px;
            transition: transform 0.2s ease-in-out, background-color 0.3s, color 0.3s;
        }

            .navbar a:hover {
                transform: scale(1.1); 
            }

            .navbar a:active {
                transform: scale(1.2);
            }

            .navbar a.active {
                border-bottom: 2px solid #ad9162;
                color: #ad9162; 
            }

        .card-image img {
            width: 100%;
            height: 250px;
            object-fit: cover;
        }

        #userModal {
            max-width: 500px;
            border-radius: 15px;
            background-color: #F1EDDA;
        }

            #userModal .modal-content {
                padding: 24px;
                background-color: rgba(173, 145, 98, 0.1);
            }

            #userModal .modal-footer {
                background-color: #F1EDDA;
                padding: 15px;
            }

            #userModal .btn-flat:hover {
                background-color: #e85a4f !important;
            }

            #userModal .section {
                padding: 20px;
                color: #333;
            }
    </style>
</head>
<body>
    <!-- NAVBAR -->
    <div class="navbar">

        <img src="~/Content/Logo Transparent.png" style="border:0; height: 50px; width: 50px;">

        <h3 class="brand-logo" style="margin-left:-550px;">La Table by Cassandra and Sofia</h3>
        <div class="navbar-links">
            <a href="CustomerHome"><b>Home</b></a>
            <a href="CustomerBookings"><b>Bookings</b></a>
            <a href="CustomerAbout"><b>About</b></a>
            <a href="CustomerPromos"><b>Promos</b></a>

            <div class="trigger-container">
                <a class="modal-trigger" href="#userModal">
                    <span class="large material-icons account_circle" style="font-size: 40px">account_circle</span>
                </a>
            </div>
        </div>
    </div>
    <br>
    <br>

    <!-- User Modal -->
    <div id="userModal" class="modal">
        <div class="modal-content">
            <h5 class="center-align" style="color: #ad9162; font-weight: 700;">User Information</h5>
            <div class="divider"></div>
            <div class="section">
                <p><strong>Full Name:</strong>  @ViewBag.FirstName @ViewBag.LastName</p>
                <p><strong>Phone Number:</strong> @ViewBag.Phone_Num</p>
                <p><strong>Email:</strong> @ViewBag.Email</p>
            </div>
        </div>
        <div class="modal-footer">
            <a href="NoAccountHome" class="modal-close waves-effect waves-light btn" on-click="logout()"
               style="background-color: #ad9162; color: white; border-radius: 25px; margin-right: 10px;">
                Logout
            </a>
        </div>
        <br>
    </div>

    <!-- Promos Section -->
    <div id="Promos" class="container" style="margin-top: 80px;">
        <h4 class="section-title center-align">Exclusive Promos</h4>
        <div class="row">
            @foreach (var promo in (List<La_Table.Models.tblPromoModel>)ViewBag.Promos)
            {
                <div class="col s12 m6">
                    <div class="card">
                        <div class="card-image">
                            <img class="materialboxed" width="50" src="~/Images/date.jpg">
                            <span class="card-title" style="background: rgba(0, 0, 0, 0.5); padding: 5px;">@promo.promoName</span>
                        </div>
                        <div class="card-content">
                            <p>@promo.description</p>
                            <p><strong>Valid from: @promo.start_date.ToString("yyyy-MM-dd")</strong></p>
                            <p><strong>End date: @promo.end_date.ToString("yyyy-MM-dd")</strong></p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <br>
    <hr>
    <!-- CONTAINER 4 -->
    <div class="container4" id="bottomdetails">
        <div class="row" id="bottomdetails" style="padding-left:30px;padding-top:20px;padding-bottom:30px">
            <div class="col">
                <h6> +1 234 567 8900 or +1 987 654 3210</h6>
                <h6>latablebycs@gmail.com</h6>
                <h6> La Table by Cassandra and Sofia 7 Jean Moulin Paris, France </h6>
                <br>
            </div>

            <div class="col">
                <h6>KNOW MORE ABOUT US</h6>
                <br>
                <h6><u>Contact Us</u></h6>
                <h6><u>Find Us</u></h6>
                <h6><u>Gift Cards</u></h6>
                <h6><u>Privacy and Cookies</u></h6>
                <h6><u>Terms and Conditions</u></h6>
            </div>

            <div class="col">
                <h6>JOIN OUR COMMUNITY</h6>
                <br>
                <h6><u>Travel Professionals</u></h6>
                <h6><u>Event Planners</u></h6>
                <h6><u>Event Organizers</u></h6>
                <h6><u>Media Center</u></h6>
                <h6><u>Development</u></h6>
            </div>
            <br>
        </div>
    </div>

    <hr>
    <br>

    <!--User Modal stuff-->
    <script>

        document.addEventListener('DOMContentLoaded', function () {
            // Initialize all modals
            var modals = document.querySelectorAll('.modal');
            M.Modal.init(modals, {
                dismissible: true,
                opacity: 0.5,
                inDuration: 250,
                outDuration: 250,
                startingTop: '4%',
                endingTop: '10%'
            });
            function logout() {
                alert('You have been logged out.');
                // Add your logout logic here
                var userModal = M.Modal.getInstance(document.querySelector('#userModal'));
                userModal.close();
            }
        }
        )
    </script>

</body>
</html>