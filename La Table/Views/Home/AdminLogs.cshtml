@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>

        body {
            margin: 0;
            font-family: 'Quicksand', sans-serif;
            background-color: #F1EDDA;
        }
      


        .sidebar {
            background-color: #472F35;
            width: 80px;
            height: 100vh;
            transition: width 0.3s;
            position: fixed;
            overflow: hidden;
            z-index: 1000;
        }

            .sidebar:hover {
                width: 250px;
            }

            .sidebar .logo {
                height: 80px;
                display: flex;
                justify-content: center;
                align-items: center;
                font-size: 24px;
                color: #F1EDDA;
            }

            .sidebar ul {
                list-style: none;
                padding: 0;
            }

                .sidebar ul li {
                    position: relative;
                }

                    .sidebar ul li a {
                        display: flex;
                        align-items: center;
                        padding: 15px;
                        text-decoration: none;
                        color: #F1EDDA;
                        font-size: 16px;
                        transition: background 0.3s;
                    }

                        .sidebar ul li a:hover {
                            background-color: #AD9162;
                        }

                    .sidebar ul li i {
                        margin-right: 10px;
                        font-size: 20px;
                        margin-left: 15px;
                    }

                    .sidebar ul li span {
                        opacity: 0;
                        visibility: hidden;
                        transition: opacity 0.3s, visibility 0.3s;
                        white-space: nowrap;
                    }

            .sidebar:hover ul li span {
                opacity: 1;
                visibility: visible;
            }

            .sidebar:hover ~ .main-content {
                margin-left: 250px;
            }

        .main-content {
            margin-left: 80px;
            padding: 20px;
        }

        .header {
            font-size: 30px;
            color: #472F35;
            margin-bottom: 20px;
        }

        .table-container {
            background-color: #FFFFFF;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            margin-top: 20px;
        }

            .table-container table {
                width: 100%;
                border-collapse: collapse;
            }

            .table-container table, .table-container th, .table-container td {
                border: 1px solid #AD9162;
            }

            .table-container th, .table-container td {
                padding: 10px;
                text-align: left;
            }

            .table-container th {
                background-color: #472F35;
                color: #F1EDDA;
            }

            .table-container td {
                background-color: #F9F9F9;
            }

    </style>
</head>
<body ng-init = "loadLogs()">
    <div class="sidebar">
        <div class="logo">
            <img src="~/Content/Logo.jpg" alt="Logo" style="width: 50px; height: 50px; object-fit: cover;">
        </div>
        <ul>
            <li><a href="AdminDashboard"><i class="material-icons">dashboard</i><span>Dashboard</span></a></li>
            <li><a href="AdminAccount"><i class="material-icons">account_circle</i><span>Accounts</span></a></li>
            <li class="active"><a href="AdminLogs"><i class="material-icons">access_time</i><span>Logs</span></a></li>
            <li><a href="AdminPromos"><i class="material-symbols-outlined">sell</i><span>Promos</span></a></li>
            <li><a href="AdminBookings"><i class="material-icons">event_note</i><span>Bookings</span></a></li>
            <li><a href="AdminTables"><i class="material-symbols-outlined">table_restaurant</i><span>Tables</span></a></li>
            <li><a href="NoAccountHome"><i class="material-icons">exit_to_app</i><span>Log Out</span></a></li>
        </ul>
    </div>

    <div class="main-content">
        <div class="header">Logs</div>

        <!-- Logs Table -->
        <div class="table-container">

            <table id="logsTable">
                

                <thead>

                    <tr>
                        <th>Log ID</th>
                        <th>User Full Name</th>
                        <th>Action</th>
                        <th>Timestamp</th>

                    </tr>
                </thead>
                <tbody>
                    <!-- example -->
                    <tr ng-repeat="log in logs">
                        <td>{{ log.LogsID }}</td>
                        <td>{{ log.UserFullName }}</td>
                        <td>{{ log.action }}</td>
                        <td>{{ log.timestamp | date:'MMMM d, y h:mm a' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
